#!/bin/bash
sudo update-alternatives --config 'java'
sudo update-alternatives --config 'javac'
sudo update-alternatives --config 'jre_openjdk'
sudo update-alternatives --config 'java_sdk_openjdk'
update-alternatives --list | grep 'jvm'

here="${0:0: -11}"
cd "$here"

sudo cp 'archive/fstrimz' '/usr/sbin/'
sudo chown root:root '/usr/sbin/fstrimz'

sudo nano '/etc/dnf/automatic.conf'

f='/usr/lib/systemd/system/fstrim.service'
xclip -i "$f" -selection clipboard
sudo systemctl edit 'fstrim.service'

sudo systemctl enable --now 'dnf-automatic.timer' 'fstrim.timer'
sudo systemctl daemon-reload
systemctl list-timers --all

s='sudo.conf'
if [[ -e "$s"]]
then
  cp '/etc/'"$s" .
fi

t='Path askpass /usr/libexec/openssh/gnome-ssh-askpass'
echo "$t" >> "$s"

chmod 0644 "$s"
sudo chown root:root "$s"
sudo mv "$s" '/etc/'"$s"
