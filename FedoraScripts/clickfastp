#!/bin/python3
import pyautogui as gui
import subprocess
import sys
import time

gui.PAUSE = 0.005
gui.FAILSAFE = True

gui.keyUp('return')
gui.hotkey('alt', 'tab')
x, y = gui.position()

s=str(sys.argv[1])
l=["wmctrl", "-a", s]
subprocess.run(l)

time.sleep(0.3)

n=int(sys.argv[2])
for i in range(n):
	gui.click(x=x, y=y)
