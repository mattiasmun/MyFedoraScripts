#!/bin/bash
sleep 0.5
wmctrl -a "Kampen om Wesnoth"
sleep 1
f=$HOME/typestr

function mymethod
{
	xclip -i $f -selection clipboard
	xdotool key colon
	sleep 0.5
	xdotool key Ctrl+v
	sleep 0.5
	xdotool key Return
	sleep 0.5
}

#debug
echo 'unit advances=5' > $f
mymethod
sleep 8
echo 'unit max_hitpoints=9000' > $f
mymethod
echo 'unit advances=5' > $f
mymethod
sleep 8
echo 'unit experience=999999' > $f
mymethod
echo 'unit max_moves=90' > $f
mymethod
