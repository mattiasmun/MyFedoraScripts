#!/bin/bash
sleep 0.5
wmctrl -a "Kampen om Wesnoth"
sleep 1
f=$HOME/typestr

function mymethod
{
	xclip -i $f -selection clipboard
	xdotool key colon
	sleep 0.5
	xdotool key Ctrl+v
	sleep 0.5
	xdotool key Return
	sleep 0.5
}

#debug
echo 'unit advances=5' > $f
mymethod
sleep 5
echo 'unit max_hitpoints=9000' > $f
mymethod
echo 'unit advances=5' > $f
mymethod
sleep 5
echo 'unit experience=999999' > $f
mymethod
echo 'unit max_moves=90' > $f
mymethod
for i in range {1..40}
do
	xdotool key å
done
for i in range {1..12}
do
	xdotool key ä
done
