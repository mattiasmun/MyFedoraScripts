#!/bin/bash
sleep 0.5
wmctrl -a "Kampen om Wesnoth"
sleep 1
f=$HOME/typestr
n=3

function mymethod
{
	xdotool key colon
	sleep 0.3
	xdotool key Ctrl+v
	sleep 0.3
	xdotool key Return
}

function loop
{
	xclip -i $f -selection clipboard
	for((i=0;i<$n;i++))
	do
		mymethod
	done
}

#debug
echo 'unit advances=5' > $f
loop
sleep 5
echo 'unit max_hitpoints=9000' > $f
loop
echo 'unit advances=5' > $f
loop
sleep 5
echo 'unit experience=999999' > $f
loop
echo 'unit max_moves=90' > $f
loop
for i in {1..60}
do
	xdotool key aring
done
for i in {1..18}
do
	xdotool key adiaeresis
done
