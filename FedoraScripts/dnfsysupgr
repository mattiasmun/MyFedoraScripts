#!/bin/bash
source yesno
v=$(rpm -E %fedora)
v=$((v+1))

function closeandreboot {
	closeall
	sudo -A dnf system-upgrade reboot
}

sudo dnf -y system-upgrade download --refresh --allowerasing --releasever=$v
echo 'You can choose to reboot to perform system upgrade now:'
if confirm
then
	closeandreboot &
fi
