#!/bin/bash
v="$(rpm -E %fedora)"
sudo dnf -y install 'https://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-'"$v"'.noarch.rpm' \
	'https://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-'"$v"'.noarch.rpm' \
	'git'
sudo dnf -y upgrade

here="${0:0: -9}"
cd "$here"

./getgitrepos
./bashprofileandautostart
./progs

sudo dnf -y groupupdate 'core' 'multimedia' 'sound-and-video' \
	'workstation-product-environment'
sudo pip install 'tsp-solver2' 'PyAutoGUI'
