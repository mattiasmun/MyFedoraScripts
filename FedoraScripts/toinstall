#!/bin/bash
v="$(rpm -E %fedora)"
sudo dnf -y install https://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-"$v".noarch.rpm \
  https://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-"$v".noarch.rpm
sudo dnf -y install https://github.com/rpmsphere/noarch/raw/master/r/rpmsphere-release-30-1.noarch.rpm
sudo dnf -y upgrade
cd "${0:0: -9}"
./bashprofile
./progs
sudo dnf -y groupupdate core multimedia sound-and-video workstation-product-environment
shutdown -r now
