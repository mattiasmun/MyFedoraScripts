#!/bin/bash
eval "$(xdotool getmouselocation --shell)"
xdotool keyup Return
wmctrl -a "$1"
sleep 0.3
a="$2"
a0=4
a1=0
a2=292
a3=356
for((i=0;a>0;i++))
do
	a1="$a0"
	if((a<a0))
	then
		a1="$a"
	fi
	for((j=0;j<a1;j++))
	do
		xdotool mousemove --sync "$X" "$((Y+j*a2))" click 1
		sleep 0.28
	done
	a="$((a-a0))"
	test "$a" -gt 0 && sleep "$((a0/2))"
done
: '
1262
292*4=1168
1262-1168=94
'
