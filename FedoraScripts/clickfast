#!/bin/python3
from math import sqrt
from plumbum import local, FG, BG
import pyautogui as gui
import sys
import time

gui.PAUSE = 0.02
gui.FAILSAFE = True
gui.keyUp('enter')
wmctrl = local['wmctrl']

_x0, _y0 = (0, 0)
_x, _y = _x0, _y0
_max_len = 6
#pix = gui.pixel(_x0, _y0)
t_len = eval(sys.argv[2])
t_len = float(t_len)
t_end = 0

def _check():
	_x, _y = gui.position()
	_d_x = _x0 - _x
	_d_y = _y0 - _y
	_dist = sqrt(_d_x * _d_x + _d_y * _d_y)
	_bool = _dist <= _max_len
	_bool = time.monotonic() < t_end and _bool
#	_bool = gui.pixelMatchesColor(_x0, _y0, pix, tolerance=8) and _bool
	return _bool

def _do():
	global _x0, _y0, t_end
	_x0, _y0 = gui.position()
	wmctrl['-xa', sys.argv[1]] & FG
	time.sleep(0.1)
	t_end = time.monotonic() + t_len
	while _check():
		gui.click(_x0, _y0)

if __name__ == "__main__":
	_do()
