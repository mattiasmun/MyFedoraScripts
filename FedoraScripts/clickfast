#!/bin/python3
from plumbum import local
from plumbum import FG, BG
import pyautogui as gui
import sys
import time

gui.PAUSE = 0.02
gui.FAILSAFE = True

gui.keyUp('enter')

wmctrl = local["wmctrl"]
wmctrl["-xa", sys.argv[1]] & FG

time.sleep(0.1)

_x, _y = gui.position()

n = int(sys.argv[2])
for i in range(n):
	gui.click(x=_x, y=_y)
