#!/bin/bash
wmctrl -a firefox
sleep 1.0

function upgrade()
{
	for((j=0;j<34;j++))
	do
		sleep 0.1
		xdotool mousemove --sync 597 519 click 1
	done
}

function iteratey()
{
	x=$1+32*$3+1
	for((i=$1;i<$x;i+=32))
	do
		sleep 0.1
		xdotool mousemove --sync $2 $i click 1
		upgrade
	done
}

function iteratex()
{
	x=$1+32*$3+1
	for((i=$1;i<$x;i+=32))
	do
		sleep 0.1
		xdotool mousemove --sync $i $2 click 1
		upgrade
	done
}

