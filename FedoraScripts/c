#!/bin/bash

while read -r line
do
    center "$line"
done < <(cat /etc/motd)

str="$(stat -c %y /etc/motd)"
str="${str::19}"
str=$(trans -b 'Modified')': '"$str"
center "$str"

while read -r line
do
    center "$line"
done < <(systemctl list-timers dnf-a* --all)

dnf -C check

while read -r line
do
    center "$line"
done < <(dnf -C repoquery --unneeded)
