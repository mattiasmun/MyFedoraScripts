#!/bin/bash

while read -r line
do
    center "$line"
done < <(cat /etc/motd)

str="$(stat -c %y /etc/motd.d/dnf5-automatic)"
str="${str::19}"
str="Modified: $str"
center "$str"

while read -r line
do
    center "$line"
done < <(systemctl list-timers dnf5-a* --all)

while read -r line
do
    center "$line"
done < <(dnf -C repoquery --unneeded)
